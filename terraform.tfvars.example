organization_id = "123456789012"
domain_name     = "acme.local"

# --------------------
# Projects Configuration
# --------------------
projects = {
  "hub_project" = {
    project_id = "prj-hub-local-dns"
    apis = [
      "compute.googleapis.com",
      "dns.googleapis.com"
      # Add any other specific APIs for the hub project here
    ]
  },
  "spoke_prd_project" = {
    project_id = "prj-prd-local-dns"
    apis = [
      "compute.googleapis.com",
      "dns.googleapis.com"
      # Add any other specific APIs for the prod spoke project here
    ]
  },
  "spoke_dev_project" = {
    project_id = "prj-dev-local-dns"
    apis = [
      "compute.googleapis.com",
      "dns.googleapis.com"
      # Add any other specific APIs for the dev spoke project here
    ]
  }
}

# --------------------
# General Configuration (Can be adjusted if needed)
# --------------------
region = "us-central1"

# VPC Names
hub_vpc_name       = "hub-vpc"
spoke_prd_vpc_name = "spoke-prd-vpc"
spoke_dev_vpc_name = "spoke-dev-vpc"

# Subnet Names
hub_subnet_name       = "hub-subnet-01"
spoke_prd_subnet_name = "spoke-prd-subnet-01"
spoke_dev_subnet_name = "spoke-dev-subnet-01"

# VMs Configurations
instance_image            = "debian-cloud/debian-11"
hub_vm_machine_type       = "e2-medium"
spoke_prd_vm_machine_type = "e2-medium"
spoke_dev_vm_machine_type = "e2-medium"

# Spoke PRD VMs setup
spoke_prd_cli_vms = {
  "vm-prd-cli1" = {
    ip_address  = "10.1.0.31"
    zone_suffix = "a"
  },
  "vm-prd-cli2" = {
    ip_address  = "10.1.0.32"
    zone_suffix = "b"
  }
}

# Spoke DEV VMs setup
spoke_dev_cli_vms = {
  "vm-dev-cli1" = {
    ip_address  = "10.2.0.31"
    zone_suffix = "a"
  },
  "vm-dev-cli2" = {
    ip_address  = "10.2.0.32"
    zone_suffix = "b"
  }
}

# Hub VMs setup
hub_cli1_vm = {
  ip_address  = "10.0.0.31"
  zone_suffix = "a"
}
hub_www1_vm = {
  ip_address  = "10.0.0.21"
  zone_suffix = "b"
}

# --------------------
# DNS Configuration
# --------------------

# Cloud DNS 
hub_dns_zone_name  = "forwarding-zone"

# Local DNS servers
dns_server_vms =  {
  "vm-hub-dns1" = { 
    ip_address = "10.0.0.11" 
    zone_suffix = "a" 
  }
  "vm-hub-dns2" = { 
    ip_address = "10.0.0.12"
    zone_suffix = "b" 
  }
}